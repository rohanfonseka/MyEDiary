<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="409sp"
        android:layout_height="132sp"
        android:layout_marginTop="40dp"
        android:background="#F0FCFC"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#008B8B"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="409sp"
        android:layout_height="410sp"
        android:background="#B0C4DE"
        android:lineSpacingMultiplier="1.3"
        android:text=""
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="410sp"
        android:layout_height="190sp"
        android:background="#F7D6FA"
        android:gravity="bottom"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <!--
    <Button
        android:id="@+id/button2"
        android:layout_width="186sp"
        android:layout_height="52sp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="36dp"
        android:background="#9400D3"
        android:text="@string/login"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />
        -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="326dp"
        android:layout_height="382dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="16dp"
        android:background="#FFF"
        android:text="@string/signup"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="279dp"
        android:layout_height="47dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="80dp"
        android:autofillHints=""
        android:hint="@string/email"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="@string/blank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="276dp"
        android:layout_height="48dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="32dp"
        android:autofillHints=""
        android:hint="@string/cnfm_password"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="277dp"
        android:layout_height="46dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="32dp"
        android:autofillHints=""
        android:hint="@string/password"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/button"
        android:layout_width="131dp"
        android:layout_height="51dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="24dp"
        android:text="@string/login1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText4" />

    <!--
    <Button
