<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myediaryfonseka"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.myediaryfonseka.PlaylistPage"
            android:label="@string/title_activity_playlist_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.myediaryfonseka.PicturesPage"
            android:label="@string/title_activity_pictures_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.myediaryfonseka.NotesPage"
            android:label="@string/title_activity_notes_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.myediaryfonseka.EntryPage"
            android:label="@string/title_activity_entry_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.myediaryfonseka.WelcomePage"
            android:label="@string/title_activity_welcomepage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.myediaryfonseka.LoginPage"
            android:label="@string/title_activity_login_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.myediaryfonseka.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.example.myediaryfonseka.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>